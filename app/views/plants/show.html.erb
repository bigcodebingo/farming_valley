<h1>Plant Details</h1>

<%= link_to 'Back to All Plants', plants_path, class: 'btn btn-secondary' %>

<div class="plant-details">
  <p><strong>ID:</strong> <%= @plant.plantid %></p>
  <p><strong>Worker ID:</strong> <%= @plant.workerid %></p>
  <p><strong>Name:</strong> <%= @plant.name %></p>
  <p><strong>Type:</strong> <%= @plant.kind %></p>
  <p><strong>Date of Delivery:</strong> <%= @plant.date_of_delivery %></p>
</div>

<%= link_to 'Edit', edit_plant_path(@plant), class: 'btn btn-primary' %>
<%= button_to 'Delete', plant_path(@plant), 
              method: :delete, 
              data: { confirm: 'Are you sure?' }, 
              class: 'btn btn-danger' %>

<h1>Добавить запись</h1>

<%= link_to 'Вернуться назад', plants_path, class: 'main-menu-btn' %>

<%= form_with model: @plant, local: true, class: 'land-form' do |form| %>
  <div>
    <%= form.label :plantid, "ID растения" %>
    <%= form.number_field :plantid %> 
  </div>

  <div>
    <%= form.label :workerid, 'ID работника' %>
    <%= form.collection_select :workerid, Worker.all, :id, :id, prompt: 'Выбрать ID работника' %>
  </div>

  <div>
    <%= form.label :name, 'Название' %>
    <%= form.text_field :name %> 
  </div>

  <div>
    <%= form.label :kind, 'Сорт' %>
    <%= form.text_field :kind %> 
  </div>

  <div>
    <%= form.label :date_of_delivery, 'Дата доставки' %>
    <%= form.date_select :date_of_delivery %> 
  </div>

  <div style="text-align: center; width: 100%;">
  <%= form.submit 'Сохранить', class: 'main-menu-btn', style: 'width: 200px;' %>
</div>
<% end %>

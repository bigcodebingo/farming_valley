<h1>Изменить запись</h1>

<%= link_to 'Вернуться назад', worker_path(@worker), class: 'main-menu-btn' %>

<%= form_with model: @worker, local: true, class: 'land-form' do |form| %>
  <div>
    <%= form.label :workerid, 'ID работника' %>
    <%= form.number_field :workerid %>
  </div>

  <div>
    <%= form.label :landid, "ID угодия" %>
    <%= form.collection_select :landid, Land.all, :id, :id, prompt: 'Выбрать ID угодия' %>
  </div>

  <div>
    <%= form.label :surname, "Фамилия" %>
    <%= form.text_field :surname %>
  </div>

  <div>
    <%= form.label :firstname, "Имя" %>
    <%= form.text_field :firstname %>
  </div>

  <div>
    <%= form.label :lastname, "Отчество" %>
    <%= form.text_field :lastname %>
  </div>

  <div>
    <%= form.label :workexperience, 'Стаж работы' %>
    <%= form.number_field :workexperience %>
  </div>

  <div>
    <%= form.label :post, "Должность" %>
    <%= form.text_field :post %>
  </div>

  <div style="text-align: center; width: 100%;">
  <%= form.submit 'Сохранить', class: 'main-menu-btn' %>
</div>
<% end %>


